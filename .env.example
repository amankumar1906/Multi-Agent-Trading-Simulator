# AI Investment Agents - Environment Variables Template
# Copy this file to .env and fill in your actual values

# =============================================================================
# Google Gemini AI API
# =============================================================================
# Get from: https://makersuite.google.com/app/apikey
# Sign in → Create API key → Copy key
GEMINI_API_KEY=your_gemini_api_key_here

# =============================================================================
# Supabase Database
# =============================================================================
# Get from: https://supabase.com → Your Project → Settings → API
# Project URL (looks like: https://xxxxx.supabase.co)
SUPABASE_URL=https://your-project.supabase.co

# anon/public key (starts with "eyJ...")
SUPABASE_ANON_KEY=your_supabase_anon_key_here

# service_role key (for Lambda functions - starts with "eyJ...")
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# =============================================================================
# AWS Configuration (for Lambda deployment)
# =============================================================================
# Get from: AWS IAM → Users → Create user → Access keys
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here
AWS_REGION=us-east-1

# =============================================================================
# Frontend Configuration (Next.js)
# =============================================================================
# Use same Supabase values as above (frontend only needs public keys)
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# =============================================================================
# Optional: External APIs (for future enhancements)
# =============================================================================
# Alpha Vantage (backup for stock data)
# ALPHA_VANTAGE_API_KEY=your_alpha_vantage_key_here

# NewsAPI (for news agent)  
# NEWS_API_KEY=your_news_api_key_here

# =============================================================================
# Development Settings
# =============================================================================
NODE_ENV=development
LOG_LEVEL=debug